config BR2_PACKAGE_RECALBOX_SYSTEM
	bool "Recalbox System"
	help
	  Install the recalbox system files

choice
	prompt "Recalbox target"
	default BR2_PACKAGE_RECALBOX_TARGET_RPI2
	help
	  Select Recalbox target hardware

config BR2_PACKAGE_RECALBOX_TARGET_RPI0
	bool "rpi0"

config BR2_PACKAGE_RECALBOX_TARGET_RPI1
	bool "rpi1"

config BR2_PACKAGE_RECALBOX_TARGET_RPI2
	bool "rpi2"

config BR2_PACKAGE_RECALBOX_TARGET_RPI3
	bool "rpi3"

config BR2_PACKAGE_RECALBOX_TARGET_XU4
	bool "xu4"

config BR2_PACKAGE_RECALBOX_TARGET_C2
	bool "c2"

config BR2_PACKAGE_RECALBOX_TARGET_RK3328
	bool "rk3328"
	select BR2_PACKAGE_RECALBOX_TARGETGROUP_ROCKCHIP

config BR2_PACKAGE_RECALBOX_TARGET_RK3399
	bool "rk3399"
	select BR2_PACKAGE_RECALBOX_TARGETGROUP_ROCKCHIP

config BR2_PACKAGE_RECALBOX_TARGET_X86
	bool "x86"

config BR2_PACKAGE_RECALBOX_TARGET_X86_64
	bool "x86_64"

endchoice

# THIS SETTING IS JUST USED IN PACKAGE FILES SO THAT WE DON'T NEED TO DEFINE EVERY SYSTEM THAT IT APPLIES TO.
# IT DOES NOT HAVE A RECALBOX SYSTEM CONFIG OF ITS OWN, SO ONE OF THE ROCKCHIP SYSTEMS ALSO NEEDS TO BE ENABLED
config BR2_PACKAGE_RECALBOX_TARGETGROUP_ROCKCHIP
 	bool "building one of the supported rockchip systems: rock64, rockbox, rockpro, rockpi4, etc..."


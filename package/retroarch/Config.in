config BR2_PACKAGE_RETROARCH
	bool "Retroarch"
	depends on (BR2_PACKAGE_HAS_LIBGLES || BR2_PACKAGE_HAS_LIBEGL || BR2_PACKAGE_HAS_LIBGL || BR2_PACKAGE_HAS_LIBVULKAN)
	depends on BR2_PACKAGE_RECALBOX_SYSTEM
	select BR2_PACKAGE_NANOARCH
	select BR2_PACKAGE_RETROARCH_ASSETS
	select BR2_PACKAGE_FLAC
	help
	  A multi emulator frontend.

	  http://www.libretro.com

comment "Retroarch depends on EGL or OpenGLES"
	depends on !(BR2_PACKAGE_HAS_LIBEGL || BR2_PACKAGE_HAS_LIBGLES || BR2_PACKAGE_HAS_LIBGL || BR2_PACKAGE_HAS_LIBVULKAN)

+	.hsync_len = { 40, 40, 50},
+	.vactive = { 480, 480, 480 },
+	.vfront_porch = { 18, 18, 30},
+	.vback_porch = { 18, 18, 30 },
+	.vsync_len = { 9, 9, 18 },
+	.flags = DRM_MODE_FLAG_NVSYNC | DRM_MODE_FLAG_NHSYNC,
+};
+
+static const struct panel_desc auo_a030vvn01 = {
+	.timings = &auo_a030vvn01_timing,
+	.num_timings = 1,
+	.bpc = 6,
+	.size = {
+		.width = 60,

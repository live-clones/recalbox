/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835", "brcm,bcm2708", "brcm,bcm2709";
	fragment@0 {
			target = <&gpio>;
			__overlay__ {
				dipswitch_gpio: dipswitch_gpio_conf {
					brcm,pins = <10 27>; // GPIO 10
					brcm,function = <0>; // Input
					brcm,pull = <2>; // Pull up
				};
				fancontrol_gpio: fancontrol_gpio_conf {
					brcm,pins = <26>; // GPIO 27
					brcm,function = <1>; // Output
					brcm,pull = <0>;
				};
			};
	};
	fragment@1 {
		target-path = "/";
		__overlay__ {

			bridge: recalboxrgbdual {
				compatible = "raspberrypi,recalboxrgbdual";
				#address-cells = <1>;
				#size-cells = <0>;

				vc4-vga666-mode = <6>;

                dipswitch-gpios = <&gpio 10 0>,<&gpio 27 0>;
                fancontrol-gpios = <&gpio 26 0>;
                pinctrl-0 = <&dipswitch_gpio>, <&fancontrol_gpio>;
                pinctrl-names = "default";

				ports {
					#address-cells = <1>;
					#size-cells = <0>;

					port@0 {
						reg = <0>;

						vga_bridge_in: endpoint {
							remote-endpoint = <&dpi_out>;
						};
					};

					port@1 {
						reg = <1>;

						vga_bridge_out: endpoint {
							remote-endpoint = <&vga_con_in>;
						};
					};
				};
			};

			vga {
				compatible = "vga-connector";

				port {
					vga_con_in: endpoint {
						remote-endpoint = <&vga_bridge_out>;
					};
				};
			};
		};
	};

	fragment@2 {
		target = <&dpi>;
		__overlay__  {
			status = "okay";
			port {
				dpi_out: endpoint@0 {
					remote-endpoint = <&vga_bridge_in>;
				};
			};
		};
	};

	fragment@3 {
		target = <&dpi>;
		__overlay__  {
			status = "okay";
			pinctrl-names = "default";
			pinctrl-0 = <&vga666_mode6_pins>;
		};
	};

	fragment@4 {
		target = <&gpio>;
		__overlay__ {
			vga666_mode6_pins: vga666_mode6_pins {
				brcm,pins = <2 3 4 5 6 7 8 9 12 13 14
						 15 16 17 20 21 22 23 24 25>;
				brcm,function = <6>;
				brcm,pull = <0>;
			};
		};
	};

	fragment@5 {
		target = <&dpi>;
		__overlay__  {
			status = "okay";
			pinctrl-names = "default";
			pinctrl-0 = <&vga666_mode6_pins>;
		};
	};

	fragment@6 {
		target = <&audio_pins>;
		__overlay__ {
			brcm,pins = < 18 19 >;
			brcm,function = < 2 >; /* alt5 alt5 */
		};
	};

	fragment@7 {
		target = <&audio>;
		__overlay__  {
			brcm,disable-headphones = <0>;
		};
	};
	
};
